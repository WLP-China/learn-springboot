<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muqing.dao.DepartmentDao">

    <sql id="where">
        <where>
            <if test="params.name != null and params.name != ''">
                and t.name like concat('%', #{params.name}, '%')
            </if>
            <if test="params.isTop != null and params.isTop != ''">
                and isTop = #{params.isTop}
            </if>
        </where>
    </sql>

    <select id="count" resultType="int">
        select count(1) from t_department t
        <include refid="where"/>
    </select>

    <select id="list" resultType="com.muqing.model.Department">
        select * from t_department t
        <include refid="where"/>
        ${params.orderBy}
        limit #{offset}, #{limit}
    </select>

    <update id="update">
        update t_department t
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="info != null">
                info = #{info},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="isTop != null">
                isTop = #{isTop},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
            updateTime = now()
        </set>
        where t.id = #{id}
    </update>

</mapper>
